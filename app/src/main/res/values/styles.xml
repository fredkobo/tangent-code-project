<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SubmitButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/submit_button_text_selector</item>
        <item name="android:background">@drawable/submit_next_selector</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.MyApp.Toolbar.Solid" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/martinique</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
        <item name="titleTextAppearance">@style/ToolbarText</item>n
    </style>

    <style name="ToolbarText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
